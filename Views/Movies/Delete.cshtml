@model MovieRatingApp.Models.Movie

<h1>Delete Rating</h1>

<h3>Movie: @Model.Title</h3>

<p>Are you sure you want to delete this rating?</p>

<form asp-controller="Movies" asp-action="DeleteRating" method="post">
    <input type="hidden" name="movieId" value="@Model.MovieID" />
    <input type="hidden" name="ratingId" value="@ViewData["RatingId"]" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Details" asp-route-id="@Model.MovieID" class="btn btn-primary">Cancel</a>
</form>
