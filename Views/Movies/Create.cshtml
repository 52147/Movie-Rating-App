@model MovieRatingApp.Models.Movie

@{
    ViewData["Title"] = "Create New Movie";
}

<h1>Create New Movie</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="genre">Genre:</label>
        <input type="text" id="genre" name="genre" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="director">Director:</label>
        <input type="text" id="director" name="director" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="releaseDate">Release Date:</label>
        <input type="date" id="releaseDate" name="releaseDate" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-primary">Create Movie</button>
</form>

<p>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</p>
